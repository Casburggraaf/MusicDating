<%- include ../partials/head.ejs %>
<main id="appel">
<h3>Hallo <%= user.voornaam %>, Dit zijn jouw matches</h3>
<div class="row">
<a href="../users/edit" class="btn btn-primary active col-sm-3" role="button">Profiel aanpassen</a>
<a href="../users/logout" class="btn btn-default active col-sm-4" role="button">Uiloggen</a>
</div>
<div class="container">

    <% for(var i = 0; i < users.length; ++i) {%>
      <div class="row">
		<div class="col-md-4 col-lg-4 col-sm-6 ">

            <div class="card hovercard">
                <div class="cardheader">

                </div>
                <div class="avatar">
                    <img alt="" src="<%-users[i].profielfoto%>">
                </div>
                <div class="info">
                    <div class="title">
                        <a target="_blank" href="http://scripteden.com/"><%= users[i].voornaam %> <%= users[i].achternaam %></a>
                    </div>
                    <div class="desc"><%= users[i].favartist1 %>, <%= users[i].favartist2 %>, <%= users[i].favartist3 %></div>
                    <div class="desc"><% let birthday = +new Date(users[i].geboortedatum); birthday = ~~((Date.now() - birthday) / (31557600000));%><%= birthday %> jaar oud</div>
                    <div class="desc"><%= users[i].geslacht %></div>
                </div>
            </div>
        </div>
        </div>
  <%}%>

</div>

<%- include ../partials/foot.ejs %>
